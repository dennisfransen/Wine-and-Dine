<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg_background_screen"
    android:padding="20dp"
    tools:context=".AddFragment">

    <ImageView
        android:id="@+id/image_restaurant_IV"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_photo_camera_black_24dp"
        android:contentDescription="Picture of restaurant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name_restaurant_ET"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Restaurant name"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_restaurant_IV"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />


    <EditText
        android:id="@+id/website_ET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Website"
        android:inputType="textUri"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_restaurant_IV"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_ET"
        android:autofillHints="" />

    <EditText
        android:id="@+id/phone_number_ET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Phone number"
        android:inputType="textPostalAddress|phone"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_restaurant_IV"
        app:layout_constraintTop_toBottomOf="@+id/location_ET"
        android:autofillHints="" />

    <EditText
        android:id="@+id/location_ET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_restaurant_IV"
        app:layout_constraintTop_toBottomOf="@+id/name_restaurant_ET"
        android:autofillHints="" />

    <RatingBar
        android:id="@+id/ratingBar_price"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:isIndicator="false"
        app:layout_constraintEnd_toStartOf="@+id/ratingBar_stars"
        app:layout_constraintTop_toBottomOf="@+id/website_ET" />

    <RatingBar
        android:id="@+id/ratingBar_stars"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:isIndicator="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/website_ET" />

    <EditText
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Be the first to leave a review"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_cb"
        android:autofillHints="" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        app:backgroundTint="@color/coolBackground"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review"
        app:srcCompat="@drawable/baseline_add_circle_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/gallery_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:backgroundTint="@color/coolBackground"
        app:fabSize="normal"
        app:layout_constraintEnd_toStartOf="@+id/capture_btn"
        app:layout_constraintTop_toBottomOf="@+id/review"
        app:srcCompat="@drawable/ic_photo_gallery_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/capture_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:backgroundTint="@color/coolBackground"
        app:fabSize="normal"
        app:layout_constraintEnd_toStartOf="@+id/save_btn"
        app:layout_constraintTop_toBottomOf="@+id/review"
        app:srcCompat="@drawable/ic_photo_camera_black_24dp" />

    <CheckBox
        android:id="@+id/drink_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Drink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar_stars" />

    <CheckBox
        android:id="@+id/food_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Food"
        app:layout_constraintEnd_toStartOf="@+id/drink_cb"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar_price" />


</android.support.constraint.ConstraintLayout>


