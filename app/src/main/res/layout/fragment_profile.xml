<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_profile_bg">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:context=".fragments.ProfileFragment">


        <ImageView
            android:id="@+id/user_avatar_im"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/profile" />

        <Button
            android:id="@+id/change_pw_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_display_et"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:text="@string/change_password"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/username_display_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_avatar_im"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Username: "
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/firstname_display_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_display_et"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Firstname: "
            android:textSize="14sp" />

        <EditText
            android:id="@+id/lastname_display_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstname_display_et"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Lastname: "
            android:textSize="14sp" />

        <EditText
            android:id="@+id/phone_number_display_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastname_display_et"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="phone"
            android:text="Phone number: "
            android:textSize="14sp" />

        <EditText
            android:id="@+id/email_display_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_number_display_et"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Email: "
            android:textSize="14sp" />

        <Button
            android:id="@+id/save_changes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_display_et"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Save Changes"
            android:textSize="14sp" />


    </RelativeLayout>

</ScrollView>